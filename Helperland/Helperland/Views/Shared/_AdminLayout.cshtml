@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helperland</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin_style.css" asp-append-version="true" />
    <script type="text/javascript" language="javascript">
        function DisableBackButton() {
            window.history.forward()
        }
        DisableBackButton();
        window.onload = DisableBackButton;
        window.onpageshow = function (evt) { if (evt.persisted) DisableBackButton() }
        window.onunload = function () { void (0) }
    </script>
    <partial name="_Favicons" />
</head>
<body class="helperland-admin">
    <header>
        <div class="navbar d-flex align-items-center">
            <div class="d-flex gap-3 align-items-center">
                <img src="~/images/list.svg" width="32" class="d-lg-none menu" alt="" />
                <h1 class="t-36">helperland</h1>
            </div>
            <div class="d-flex align-items-center gap-3">
                <img src="~/images/admin-user.png" alt="" />
                <div>James Smith</div>
                <img src="~/images/logout.png" alt="" />
            </div>
        </div>

        <div class="wrapper margin-navbar-top">
            <div class="sidebar">
                <ul class="custom-tab nav w-100 nav-pills flex-column"
                    id="pills-tab"
                    role="tablist">
                    <li class="closebtn d-lg-none">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="32"
                             height="32"
                             fill="currentColor"
                             class="bi bi-x"
                             role="tab"
                             data-bs-toggle="collapse"
                             data-bs-target="#navbarNav"
                             aria-controls="navbarNav"
                             aria-expanded="false"
                             aria-label="Toggle navigation"
                             viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active"
                           id="t-tab-service-requests"
                           role="tab"
                           data-bs-toggle="pill"
                           data-bs-target="#tabs-service-requests"
                           aria-controls="tabs-service-requests"
                           aria-selected="false">
                            Service Requests
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link"
                           id="t-tab-useer-management"
                           data-bs-toggle="pill"
                           role="tab"
                           data-bs-target="#tabs-useer-management"
                           aria-controls="tabs-useer-management"
                           aria-selected="false">
                            User Management
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script>
        $(".menu").click(function () {
            $(".sidebar").addClass("menu-show");
        });
        $(".closebtn").click(function () {
            $(".sidebar").removeClass("menu-show");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
